@model ImdbWeb.Domain.Models.Movie
@using ImdbWeb.Domain.Models

<div>

    <h4>MovieDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MovieName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LengthInMin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LengthInMin)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ContentRating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ContentRating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>

    </dl>
    <h4>Reviews and Ratings</h4>
    <hr />
    @foreach (Review review in Model.Reviews)
    {
        <dl class="dl-horizontal">
            <dt>
                User Name
            </dt>

            <dd>

                @review.User.Username

            </dd>

            <dt>
                Review Text
            </dt>
            <dd>
                @review.ReviewText
            </dd>

            <dt>
                Rating
            </dt>
            <dd>
                @review.Rating
            </dd>

        </dl>

    }

</div>


@{
}
